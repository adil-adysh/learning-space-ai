{
  "name": "learning-space-ai",
  "version": "0.1.0",
  "type": "module",
  "description": "Minimal Electron + TypeScript app for learning cards with one-click ChatGPT prompts",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node scripts/fix-paths.js && npm run build:electron",
    "build:electron": "node scripts/build-main.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,svelte}\" \"scripts/**/*.{js,cjs}\" src/main.ts src/preload.ts",
    "lint:fix": "eslint --fix \"src/**/*.{js,ts,svelte}\" \"scripts/**/*.{js,cjs}\" src/main.ts src/preload.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "release:ci": "npm run build && npx electron-builder --publish=always",
    "preview": "vite preview",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "pack:win": "electron-builder --config build-ci-config.json --win --publish=never",
    "pack:linux": "electron-builder --config build-ci-config.json --linux --publish=never",
    "pack:all": "electron-builder --config build-ci-config.json --publish=never",
    "test": "vitest -c vitest.config.ts",
    "test:ci": "vitest -c vitest.config.ts --run --reporter=dot",
    "test:watch": "vitest -c vitest.config.ts --watch",
    "verify:dist": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist/main.cjs')){console.error('dist/main.cjs missing'); process.exit(1);} console.log('dist/main.cjs exists')\""
  },
  "keywords": [],
  "author": "Adil Adysh <adil@example.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^5.0.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/browser": "^4.0.0",
    "@vitest/browser-playwright": "^4.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.19.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "jsdom": "^22.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "svelte": "^5.46.1",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.0.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.0",
    "vitest-browser-svelte": "^2.0.0"
  },
  "build": {
    "asar": false,
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "com.example.learning-space-ai",
    "productName": "learning-space-ai",
    "artifactName": "learning-space-ai-${version}-${os}-${arch}.${ext}",
    "files": [
      "build/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets",
      "maintainer": "Adil Adysh <adil@example.com>"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USER_OR_ORG",
        "repo": "YOUR_REPO_NAME"
      }
    ]
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "felte": "^1.3.0",
    "lowdb": "^7.0.1",
    "markdown-it": "^14.1.0"
  }
}
