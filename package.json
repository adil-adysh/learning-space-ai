{
  "name": "learning-cards-electron-mvp",
  "version": "0.1.0",
  "type": "module",
  "description": "Minimal Electron + TypeScript app for learning cards with one-click ChatGPT prompts",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node scripts/fix-paths.js && npm run build:electron",
    "build:electron": "tsc --project tsconfig.main.json && node scripts/rename-to-cjs.js",
    "release:ci": "npm run build && npx electron-builder --publish=always",
    "preview": "vite preview",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "test": "npm run build && node --test dist/tests/util.test.cjs dist/tests/storage.test.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "jsdom": "^22.1.0",
    "svelte": "^5.46.1",
    "typescript": "^5.0.0",
    "vite": "^7.3.0"
  }
  ,
  "build": {
    "asar": false,
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "appId": "com.example.learning-cards",
    "productName": "Learning Cards",
    "files": [
      "build/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USER_OR_ORG",
        "repo": "YOUR_REPO_NAME"
      }
    ]
  }
}
